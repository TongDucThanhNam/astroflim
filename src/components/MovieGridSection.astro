---
import type {MovieItem, PhimMoiCapNhatResponse} from "@/types/types.ts";
import MovieCard from "@/components/MovieCard";
// fetch Data:
const response = await fetch(`https://phim.nguonc.com/api/films/phim-moi-cap-nhat?page=1`);
const data: PhimMoiCapNhatResponse = await response.json();
const movies = data.items;
---

<div class="flex flex-col items-center"
>
    {/*MovieGrid*/}
    <section class="flex flex-col items-center justify-center gap-4 py-8 md:py-10">
        <div class="container mx-auto px-4 py-8">
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-6">
                {movies.map((item: MovieItem, index:number) => (
                        <MovieCard item={item} index={index}  client:visible/>
                ))}
            </div>
        </div>
    </section>
</div>
